<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xintu.qunyinghui.customView.CustomTextViewTestActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include layout="@layout/common_title_bar"/>

            <com.xintu.qunyinghui.customView.DoubleBackgroundTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="DoubleBackGroundTextView"
                />

            <com.xintu.qunyinghui.customView.FlashTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FlashTextView"/>

            <com.xintu.qunyinghui.customView.CustomPieView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.xintu.qunyinghui.customView.CustomVoiceWaveView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
